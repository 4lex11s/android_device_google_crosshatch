service vendor.vr-crosshatch-1-0 /vendor/bin/hw/android.hardware.vr@1.0-service.crosshatch
    class hal
    user system
    group system

# reset thermal-engine when framework died and thermal-engine is in VR mode
on property:init.svc.zygote=restarting && property:sys.qcom.thermalcfg=/vendor/etc/thermal-engine-${ro.hardware}-vr.conf
   setprop sys.qcom.thermalcfg /vendor/etc/thermal-engine-${ro.hardware}.conf
   restart vendor.thermal-engine
